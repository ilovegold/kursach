<% provide(:title, 'Edit Chapter ' + @chapter.name) %>

<div class="row">
  <div class="span6 offset3">
    <%= bootstrap_form_for @chapter, url: book_chapter_path, html: {method: :patch} do |f| %>

      <%= f.text_field :name %>
      <%= f.text_area :content %>
      
      <%= f.submit "Update!", class: "btn btn-large btn-primary" %>
    <% end %>
  </div>
</div> 