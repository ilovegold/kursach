<% provide(:title, 'Edit Chapter ' + @chapter.name) %>

<div class="row">
  <div class="span6 offset3">
    <%= form_for @chapter, url: book_chapter_path, html: {method: :put} do |f| %>

      <%= f.label :name %>
      <%= f.text_field :name %>

      <%= f.label :content %>
      <%= f.text_field :content %>

      <%= f.submit "Update!", class: "btn btn-large btn-primary" %>
    <% end %>
  </div>
</div> 