<% provide(:title, 'New Chapter') %>
<h1>New Chapter</h1>

<div class="row">
  <div class="span6 offset3">
    <%= form_for @book_chapter, url: book_chapter_index_path, html: {method: :post} do |f| %>

      <%= f.label :name %>
      <%= f.text_field :name %>

      <%= f.label :content %>
      <%= f.text_field :content %>

      <%= f.submit "Create!", class: "btn btn-large btn-primary" %>
    <% end %>
  </div>
</div> 

