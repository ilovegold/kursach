<% provide(:title, 'New Chapter') %>
<h1>New Chapter</h1>

<div class="row">
  <div class="span6 offset3">
    

	<%= bootstrap_form_for @book_chapter, url: book_chapter_index_path, html: {method: :post} do |f| %>

  
      <%= f.text_field :name %>
      <%= f.text_area :content %>

      <%= f.submit 'Create', class: "btn btn-large btn-primary" %>
    <% end %>    
  </div>
</div> 

