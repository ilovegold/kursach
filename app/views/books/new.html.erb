<% provide(:title, 'New Story') %>
<h1>New Story</h1>

<div class="row">
  <div class="span6 offset3">
    <%= form_for(@book) do |f| %>

      <%= f.label :name %>
      <%= f.text_field :name %>

      <%= f.label :genre %>
      <%= f.text_field :genre %>

      <%= f.submit "Create!", class: "btn btn-large btn-primary" %>
    <% end %>
  </div>
</div> 