<% provide(:title, 'All users') %>
<h1>All users</h1>
<%= will_paginate @users %>

<ul class="users">
  <% @users.each do |user| %>
    <li>
      <% if user.avatar.blank? %>
		<%= link_to image_tag("default.jpg", alt: "AVA"), '#' %>
		<% else %>
		
		<%= image_tag(user.avatar) %>
		<% end %>
      <%= link_to user.name, user %>
    </li>
  <% end %>
</ul>

<%= will_paginate @users %>